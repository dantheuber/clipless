{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "*.ts",
    "*.js",
    "*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
